@model List<Exam2020.DAL.UrlContent>

@{
    ViewData["Title"] = "Search";
}
<h1>Search</h1>

<form method="post">
    <label>Domain:</label>
    <input type="text" name="domain" /><br /><br />
    <input type="submit" value="Search" />
</form>
<br /><br />
@{
    if (Model.Count > 0)
    {
        <table class="table">
            <thead>
            <tr>
                <th>Url</th>
                <th>Body</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Url</td>
                        <td>@item.Body.Substring(0, 100))</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
